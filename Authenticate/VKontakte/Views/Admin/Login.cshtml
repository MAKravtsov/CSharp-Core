@model LoginModel

<h1>Login</h1>

<h3>External systems authorizations</h3>

<form asp-controller = "Admin" asp-action = "ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" >
   @foreach (var extSystem in Model.ExternalSystems)
   {
       <button
        type="submit"
        name="provider"
        value=@extSystem.Name>@extSystem.DisplayName</button>
   }
</form>

<form asp-controller = "Admin" asp-action = "Login" method="post">
    <input hidden asp-for="ReturnUrl" />
    
    <div asp-validation-summary=All></div>

    <div>
        <label>UserName</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div>
        <label>Password</label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <p>
        <button type="submit">Log in</button>
    </p>
</form>